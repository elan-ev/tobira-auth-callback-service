[Unit]
Description=Tobira-Auth-Callback-Service
Documentation=https://github.com/elan-ev/tobira-auth-callback-service/
Wants=network.target
After=network-online.target

[Service]
Type=exec
#User=tobiraauth
#Group=tobiraauth
WorkingDirectory=/opt/tobira-auth-callback-service
EnvironmentFile=/etc/default/tobira-auth-callback-service.env
ExecStart=/opt/tobira-auth-callback-service/bin/sanic tobiraauth.server:create_app --no-motd
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target default.target
